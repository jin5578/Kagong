<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

        <variable
                name="uViewModel"
                type="com.tistory.jeongs0222.kagongapplication.ui.userprofile.UserProfileViewModel"/>

    </data>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:background="@color/colorWhite">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/previous"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:contentDescription="@string/imageView_description"
                    android:onClick="@{() -> uViewModel.previousClickEvent()}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                    android:id="@+id/like"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="16dp"
                    android:src="@drawable/dislike"
                    android:contentDescription="@string/imageView_description"
                    android:onClick="@{() -> uViewModel.userLikeClickEvent()}"
                    app:uLikeStatus="@{uViewModel.likeStatus}"
                    app:layout_constraintTop_toTopOf="@id/previous"
                    app:layout_constraintBottom_toBottomOf="@id/previous"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                    android:id="@+id/image"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/imageView_description"
                    app:uUserProfile="@{uViewModel.userProfileItem.image}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/previous"
                    tools:src="@drawable/profileimage"/>

            <TextView
                    android:id="@+id/nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@{uViewModel.userProfileItem.nickname}"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:fontFamily="@font/nanumotfr"
                    app:layout_constraintStart_toStartOf="@id/image"
                    app:layout_constraintEnd_toEndOf="@id/image"
                    app:layout_constraintTop_toBottomOf="@id/image"
                    tools:text="나를찾아떠나는"/>

            <TextView
                    android:id="@+id/sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:fontFamily="@font/nanumotfr"
                    app:uUserSex="@{uViewModel.userProfileItem.sex}"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="@id/nickname"
                    app:layout_constraintTop_toBottomOf="@id/nickname"
                    app:layout_constraintEnd_toStartOf="@id/age"
                    tools:text="여성"/>

            <TextView
                    android:id="@+id/age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="12sp"
                    android:fontFamily="@font/nanumotfr"
                    app:uUserAge="@{uViewModel.userProfileItem.age}"
                    app:layout_constraintStart_toEndOf="@id/sex"
                    app:layout_constraintTop_toTopOf="@id/sex"
                    app:layout_constraintBottom_toBottomOf="@id/sex"
                    app:layout_constraintEnd_toEndOf="@id/nickname"
                    tools:text="25세"/>

            <ImageView
                    android:id="@+id/null1"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/like"
                    android:contentDescription="@string/imageView_description"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="@id/nickname"
                    app:layout_constraintEnd_toStartOf="@id/like_count"
                    app:layout_constraintTop_toBottomOf="@id/sex"/>

            <TextView
                    android:id="@+id/like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{uViewModel.likeCount}"
                    android:textSize="12sp"
                    android:fontFamily="@font/nanumotfr"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@id/null1"
                    app:layout_constraintEnd_toEndOf="@id/nickname"
                    app:layout_constraintTop_toTopOf="@id/null1"
                    app:layout_constraintBottom_toBottomOf="@id/null1"
                    tools:text="63"/>

            <TextView
                    android:id="@+id/null2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="50dp"
                    android:text="@string/stamp"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/null1"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:paddingBottom="50dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    app:topItemList="@{uViewModel.userSchedule}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/null2"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>