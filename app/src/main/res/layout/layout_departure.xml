<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

        <variable
                name="aLViewModel"
                type="com.tistory.jeongs0222.kagongapplication.ui.viewmodel.AddLocationViewModel"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite">

        <TextView
                android:id="@+id/departure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:text="@string/departure_input"
                android:textSize="18sp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/goyang"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/null1"
                app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
                android:id="@+id/null1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:src="@drawable/ic_keyboard_arrow_right_gray_24dp"
                android:contentDescription="@string/imageView_description"
                app:layout_constraintStart_toEndOf="@id/departure"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/departure"
                app:layout_constraintBottom_toBottomOf="@id/departure"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>