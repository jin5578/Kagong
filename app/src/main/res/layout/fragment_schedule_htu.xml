<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

        <variable
                name="hViewModel"
                type="com.tistory.jeongs0222.kagongapplication.ui.howToUse.HowToUseViewModel"/>

    </data>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:background="@color/colorPink2">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/previous"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:onClick="@{() -> hViewModel.previousClickEvent()}"
                    android:contentDescription="@string/imageView_description"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/null1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="@string/schedule_htu1"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:fontFamily="@font/nanumotfr"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/previous"/>

            <TextView
                    android:id="@+id/null2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:lineSpacingExtra="5dp"
                    android:text="@string/schedule_htu2"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp"
                    android:fontFamily="@font/nanumotfl"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/null1"/>

            <ImageView
                    android:id="@+id/null3"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="60dp"
                    android:contentDescription="@string/imageView_description"
                    app:imageGlide="@{hViewModel.image6}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/null2"
                    tools:src="@drawable/schedulehtu1"/>

            <TextView
                    android:id="@+id/null4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="@string/schedule_htu3"
                    android:textSize="10sp"
                    android:fontFamily="@font/nanumotfr"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/null3"/>

            <ImageView
                    android:id="@+id/null5"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="50dp"
                    android:contentDescription="@string/imageView_description"
                    app:imageGlide="@{hViewModel.image7}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/null4"
                    tools:src="@drawable/schedulehtu2"/>

            <TextView
                    android:id="@+id/null6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="@string/schedule_htu4"
                    android:textSize="10sp"
                    android:fontFamily="@font/nanumotfr"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/null5"/>

            <ImageView
                    android:id="@+id/null7"
                    android:layout_width="0dp"
                    android:layout_height="135dp"
                    android:layout_marginTop="50dp"
                    android:contentDescription="@string/imageView_description"
                    app:imageGlide="@{hViewModel.image8}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/null6"
                    tools:src="@drawable/schedulehtu3"/>

            <TextView
                    android:id="@+id/null8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="@string/schedule_htu5"
                    android:textSize="10sp"
                    android:fontFamily="@font/nanumotfr"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/null7"/>

            <ImageView
                    android:id="@+id/null9"
                    android:layout_width="0dp"
                    android:layout_height="230dp"
                    android:layout_marginTop="50dp"
                    android:contentDescription="@string/imageView_description"
                    app:imageGlide="@{hViewModel.image9}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/null8"
                    tools:src="@drawable/schedulehtu4"/>

            <TextView
                    android:id="@+id/null10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="@string/schedule_htu6"
                    android:textSize="10sp"
                    android:fontFamily="@font/nanumotfr"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/null9"/>

            <ImageView
                    android:id="@+id/null11"
                    android:layout_width="0dp"
                    android:layout_height="230dp"
                    android:layout_marginTop="50dp"
                    android:contentDescription="@string/imageView_description"
                    app:imageGlide="@{hViewModel.image10}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/null10"
                    tools:src="@drawable/schedulehtu5"/>

            <TextView
                    android:id="@+id/null12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:text="@string/schedule_htu7"
                    android:textSize="10sp"
                    android:fontFamily="@font/nanumotfr"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/null11"/>

            <ImageView
                    android:id="@+id/null13"
                    android:layout_width="0dp"
                    android:layout_height="350dp"
                    android:layout_marginTop="50dp"
                    android:contentDescription="@string/imageView_description"
                    app:imageGlide="@{hViewModel.image11}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/null12"
                    tools:src="@drawable/schedulehtu6"/>

            <TextView
                    android:id="@+id/null14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="50dp"
                    android:gravity="center"
                    android:text="@string/schedule_htu8"
                    android:textSize="10sp"
                    android:fontFamily="@font/nanumotfr"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/null13"
                    app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>