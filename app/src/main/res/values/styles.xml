<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomNavigationTextActiveStyle" parent="@android:style/TextAppearance.DeviceDefault.Widget.TabWidget">
        <item name="android:fontFamily">@font/nanumotfb</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPink</item>
    </style>

    <style name="BottomNavigationTextInActiveStyle" parent="@android:style/TextAppearance.DeviceDefault.Widget.TabWidget">
        <item name="android:fontFamily">@font/nanumotfb</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="InnerTabLayoutTextStyle" parent="@android:style/TextAppearance.DeviceDefault.Widget.TabWidget">
        <item name="android:fontFamily">@font/nanumotfb</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>